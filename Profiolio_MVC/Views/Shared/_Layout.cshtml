<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Portfolio</title>
  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/Profiolio_MVC.styles.css" asp-append-version="true" />
  <!-- Vendor CSS Files -->
  @* <link href="assets/vendor/aos/aos.css" rel="stylesheet"> *@

  <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
  @* <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet"> *@
</head>

<body>
  <!-- ======= Mobile nav toggle button ======= -->
  <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

  <!-- ======= Header ======= -->
  <header id="header">
    <div class="d-flex flex-column">

      <div class="profile">
        <img src="~/img/binhprofile1.jpg" alt="" class="img-fluid rounded-circle">
        <h1 class="text-light">
          <a asp-area="" asp-controller="Home" asp-action="Index">Binh Bui</a>
        </h1>
      </div>

      <nav id="navbar" class="nav-menu navbar">
        <ul>
          <li>
            <a asp-area="" class="nav-link scrollto active" asp-controller="Home" asp-action="Index">
              <i class="bx bx-home"></i> <span>Home</span></a>
          </li>
          <li>
            <a asp-area="" class="nav-link scrollto" asp-controller="Home" asp-action="About">
              <i class="bx bx-user"></i> <span>About</span>
            </a>
          </li>
          <li>
            <a asp-area="" class="nav-link scrollto" asp-controller="Home" asp-action="Resume">
              <i class="bx bx-file-blank"></i> <span>Resume</span>
            </a>
          </li>

          <li>
            <a asp-area="" class="nav-link scrollto" asp-controller="Home" asp-action="Project">
              <i class="bx bx-book-content"></i> <span>Project</span>
            </a>
          </li>

          <li>
            <a asp-area="" class="nav-link scrollto" asp-controller="Home" asp-action="Contact">
              <i class="bx bx-envelope"></i> <span>Contact</span>
            </a>
          </li>


          @* <li><a href="#about" class="nav-link scrollto"><i class=bx bx-user"></i> <span>About</span></a></li>
          @*<li><a href="#resume" class="nav-link scrollto"><i class="bx bx-file-blank"></i>
          <span>Resume</span></a></li>
          @*<li><a href="#project" class="nav-link scrollto"><i class="bx bx-book-content"></i>
          <span>Project</span></a></li>
          <li><a href="#services" class="nav-link scrollto"><i class="bx bx-server"></i>
          <span>Services</span></a></li>
          <li><a href="#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>*@
        </ul>
      </nav><!-- .nav-menu -->
    </div>
  </header><!-- End Header -->
  <div>
    <main id="main" role="main">
      @RenderBody()
    </main>
  </div>

  @* <footer class="border-top footer text-muted">
  <div class="container">
  &copy; 2023 - Profiolio_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
  </div>
  </footer> *@
  <footer id="footer">
    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong><span>AAA</span></strong>
      </div>

    </div>
    </div>
  </footer><!-- End  Footer -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/typed.js/typed.umd.js"></script>

  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
